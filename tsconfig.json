{
   "compilerOptions": {
      "jsx": "react-jsx",
      "target": "ES6",
      "module": "ES6",
      "declaration": true,
      "outDir": "./build",
      "strict": true,
      "allowJs": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "removeComments": true,
      "moduleResolution": "Node"
   },
   "include": ["./src/**/*.ts*" ],
   "exclude": ["./build"]
}